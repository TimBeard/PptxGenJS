{
	"compilerOptions": {
		"allowSyntheticDefaultImports": true,
		"declaration": true,
		"declarationDir": "./out/defs",
		"lib": [
			"dom",
			"es2020"
		],
		"module": "es2020",
		"moduleResolution": "node",
		"noImplicitAny": false,
		"outDir": "./out",
		"sourceMap": true,
		"strict": true,
		"strictNullChecks": false, // NOTE: very necessary!
		"target": "es2016"
	},
	"display": "Recommended",
	"$schema": "https://json.schemastore.org/tsconfig",
	"include": [
		"src/**/*"
	]
}
